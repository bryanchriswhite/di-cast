*
  box-sizing: border-box;

html
  min-width 430px

[class*='ui-select-']
  &,
  &:hover,
  &:active,
  &:focus
    outline-style none
    outline-width 0px

audio,
#hero>input[type='range']
  position absolute
  z-index 1
  /*bottom 0*/
  bottom 10px
  right 0
  left 0
  margin auto

input[type='range']
  -webkit-appearance none
  border-radius 15px
  box-shadow inset 0 0 5px #333
  background-color #999
  height 20px
  vertical-align middle

  width 80%

input[type=range]::-webkit-slider-runnable-track
