#play-pause
  cursor pointer
  position absolute
  bottom 10px
  left 15px
  width 50px
  height 50px
  border-radius 50%
  background #428bca
  z-index 1
  border 1px solid #626262

  .play,
  .pause
    position: absolute;
    margin: auto;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;

  .play
    height: 0;
    width: 0;
    border-left: 20px solid #1c1c1c;
    border-top: 10px solid transparent;
    border-bottom: 10px solid transparent;
    margin-right: 12px;

  .pause
    width: 20px;
    height: 20px;
    background: #1c1c1c;


#hero
  width 350px
  height 356px
  position relative
  margin-top 30px
  margin-left auto
  margin-right auto

#channel-art
  border 3px solid dimgrey
  position absolute
  left 0
  right 0
  margin auto
