*
  box-sizing: border-box;

html
  min-width 430px

[class*='ui-select-']
  &,
  &:hover,
  &:active,
  &:focus
    outline-style none
    outline-width 0px

audio,
#hero>input[type='range']
  position absolute
  z-index 1
  /*bottom 0*/
  bottom 10px
  right 0
  left 0
  margin auto
  padding-left 18px

input[type='range']
  -webkit-appearance none
  border-radius 15px
  box-shadow inset 0 0 5px #333
  background-color #999
  height 20px
  vertical-align middle

  width 80%

input[type=range]::-webkit-slider-runnable-track
  /*width 300px*/
  /*height 10px*/
  /*background #ddd*/
  /*border none*/
  /*border-radius 3px*/

input[type=range]::-webkit-slider-thumb
  -webkit-appearance none
  /*border none*/
  border 1px solid #626262
  height 20px
  width 20px
  border-radius 50%
  background #428bca

input[type=range]:focus
  outline none

/*input[type=range]:focus::-webkit-slider-runnable-track*/
